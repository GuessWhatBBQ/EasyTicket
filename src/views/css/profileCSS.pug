style.
    #user-profile{
        padding: 3%;
        margin-top: 5%;
        margin-bottom: 3%;
        border-radius: 0.5rem;
        background: whitesmoke;
    }
    .profile-img{
        text-align: center;
    }
    .profile-img img{
        width: 70%;
        height: 100%;
    }
    #profile-head h5{
        color: #333;
    }
    #profile-head h6{
        color: #0062cc;
    }
    #profile-edit-btn{
        border: none;
        border-radius: 1.5rem;
        width: 70%;
        padding: 2%;
        font-weight: 600;
        color: #6c757d;
        cursor: pointer;
    }

    #profile-links{
        padding: 14%;
        margin-top: -15%;
    }
    #profile-links p{
        font-size: 12px;
        color: #818182;
        font-weight: 600;
        margin-top: 10%;
    }

    #profile-tab label{
        font-weight: 600;
    }
    #profile-tab p{
        font-weight: 600;
        color: #0062cc;
    }
    @media screen and (max-width: 768px){
        #profile-head{
            margin-top: 3%;
            text-align: center;
        }
        #profile-edit-btn{
            margin-left: 15%;
        }
        #profile-links{
            text-align: center;
        }
        #profile-tab{
            margin-left: 15%;
        }
        #profile-edit-btn{
            text-align:center;
        }
    }