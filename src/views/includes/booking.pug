mixin booking(bookingData,boolean)
    .card-group(id=bookingData.trip_id)
        h5(class="card-title" style="display:none;")
                = bookingData.trip_id
        .card
            .card-body
                    .row
                        p.col-6 PICKUP:
                        p.col-6(class="card-text")
                            = bookingData.pickup
                    .row
                        p.col-6 START DATE:
                        p.col-6(class="card-text")
                            = bookingData.starting_date
                    .row
                        p.col-6 START TIME:
                        p.col-6(class="card-text")
                            = bookingData.starting_time
        .card
            .card-body
                .row
                    p.col-6 DESTINATION:
                    p.col-6(class="card-text")
                        = bookingData.destination
                .row
                    p.col-6 ARRIVAL DATE:
                    p.col-6(class="card-text")
                        = bookingData.arrival_date
                .row
                    p.col-6 ARRIVAL TIME:
                    p.col-6(class="card-text")
                        = bookingData.arrival_time
        .card
            .card-body
                .row
                    p.col-6 SEATS:
                    p.col-6(class="card-text")
                        = bookingData.seats
        if(boolean === true)
            button(class='btn btn-styles' id=`btn-${bookingData.trip_id}` onclick=`printTicket('${bookingData.trip_id}')`)
                |print ticket
            button(class='btn btn-styles' id=`btn-${bookingData.trip_id}` onclick=`cancelTicket('${bookingData.trip_id}')`)
                |cancel ticket
        
